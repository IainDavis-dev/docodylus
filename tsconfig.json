{
    "compilerOptions": {
        "jsx": "react-jsx",
        "module": "esnext",
        "moduleResolution": "node",
        "target": "esnext",
        "strict": true,
        "baseUrl": "./",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@components/*": ["src/components/*"],
            "@dummies/*": ["src/dummies"]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.mdx"
    ]
}
