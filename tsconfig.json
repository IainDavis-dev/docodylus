{
    "compilerOptions": {
        "jsx": "react-jsx",
        "lib": ["dom", "esnext"],
        "module": "esnext",
        "moduleResolution": "bundler",
        "target": "esnext",
        "strict": true,
        "noImplicitAny": true,
        "baseUrl": "./",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "paths": {
            "@components/*": ["src/components/*"],
            "@dummies/*": ["src/dummies/*"],
            "@i18n/*": ["src/common/i18n/*"],
            "@validation/*": ["src/common/validation/*"],
            "@docs/*": ["docs/*"],
            "@test-utils/*": ["test/testUtils/*"],
            "@types/*": ["src/types/*"],
            "@shared-utils/*": ["src/common/sharedUtils/*"],
            "@error/*": ["src/common/error/*"],
            "@namespace/*": ["src/common/namespace/*"],
        },
        "types": [
            "react",
            "react-dom",
            "vitest/globals",
            "@testing-library/jest-dom",
            "node-polyglot"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.mdx",
        "vite-env.d.ts",
        "test/**/*.ts",
        "test/**/*.tsx",
        "index.d.ts",
        "index.test-d.ts",
        "docs/**/*.ts",
        "docs/**/*.tsx",
        ".storybook/**/*.ts",
        ".storybook/**/*.tsx",
        "*.ts",
        "*.tsx",
        "infra/config/**/*.ts",
        "infra/config/**/*.tsx", "infra/config/eslint/typescriptSource.js", "infra/config/eslint/testFiles.js", "infra/config/eslint/nonRuntimeFiles.js", "infra/config/eslint/javascriptSource.js", "infra/config/eslint/index.js", "infra/config/eslint/globalEslintConfig.js", "infra/config/eslint/eslintignore.js", "infra/config/eslint/consts.js", "infra/config/eslint/typeDeclarations.js",
    ],
    "exclude": [ "eslint.config.mjs"]
}
