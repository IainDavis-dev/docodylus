{
    "compilerOptions": {
        "jsx": "react-jsx",
        "lib": ["dom", "esnext"],
        "module": "esnext",
        "moduleResolution": "node",
        "target": "esnext",
        "strict": true,
        "baseUrl": "./",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@components/*": ["src/iaindavis-dev/docusaurus-extensions/components/*"],
            "@dummies/*": ["src/dummies/*"]
        },
        "types": [
            "react",
            "react-dom",
            "vitest/globals",
            "@testing-library/jest-dom"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.mdx"
    ],
}
