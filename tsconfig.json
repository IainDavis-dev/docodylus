{
    "compilerOptions": {
        "jsx": "react-jsx",
        "lib": ["dom", "esnext"],
        "module": "esnext",
        "moduleResolution": "node",
        "target": "esnext",
        "strict": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@components/*": ["src/components/*"],
            "@dummies/*": ["src/dummies/*"],
            "@i18n/*": ["src/infra/i18n/*"],
            "@validation/*": ["src/infra/validation/*"],
            "@docs/*": ["docs/*"],
            "@test-utils/*": ["test/test-utils/*"],
            "@types/*": ["src/types/*"],
            "@shared-utils/*": ["src/infra/sharedUtils/*"],
        },
        "types": [
            "react",
            "react-dom",
            "vitest/globals",
            "@testing-library/jest-dom",
            "node-polyglot"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.mdx",
        "vite-env.d.ts",
        "test/**/*.ts",
        "test/**/*.tsx",
    ],
}
